        <MudText Typo="Typo.h6" Align="Align.Center" Class="mb-2">ממוצע ציונים</MudText>
        <MudChart ChartType="ChartType.Bar" ChartSeries="@Series" XAxisLabels="@XAxisLabels" Width="100%" Height="350px" ShowLegend="false" Color="Color.Primary">
